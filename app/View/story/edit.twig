{% block header_scripts_add %}
{% endblock %}

{#ここから表示したい情報を記載します。#}
{% block page_content %}
<div class="page-header text-center">
  <h1>ストーリー作成</h1>
</div>
<form type = "submit">
<div class="box">
  <div class="row">
    <div class="col-md-12">
      <div class="well text-center">
        <!-- ストーリ記入するためのフォーム -->
        <textarea name="content" rows="10" cols="100"></textarea>
        <br>
        <br>
